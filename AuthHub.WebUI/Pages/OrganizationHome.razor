@using AuthHub.Models.Organizations
@using AuthHub.WebUI.Connectors
@inject IOrganizationConnector _connector

<h1>@model.Name</h1>

<h3>Auth Settings</h3>
<ul>
    @foreach (var settings in model?.Settings)
    {
        <li>
            <a href="/organizationSettings?organizationId=@model.ID&name=@settings.Name">@settings.Name</a>
            <span>@settings.AuthScheme.ToString()</span>
        </li>
    }
</ul>



@code {

    private Organization model = null;

    [Parameter]
    public Guid OrganizationID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        model = await _connector.GetOrganization(OrganizationID);
    }
}